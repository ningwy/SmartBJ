<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_tpi_list_icon"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="#000000"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic_item_list_default" />

    <TextView
        android:id="@+id/tv_tpi_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_tpi_list_icon"
        android:text="就打死了房间的律师费是打发第三方几点睡了房间里速度快" />

    <TextView
        android:id="@+id/tv_tpi_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_tpi_list_icon"
        android:layout_alignLeft="@id/tv_tpi_list_title"
        android:text="2011-11-11 11:11" />

    <ImageView
        android:id="@+id/iv_tpi_list_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_news_comment_num" />

</RelativeLayout>
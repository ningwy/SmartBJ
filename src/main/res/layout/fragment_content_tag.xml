<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <io.github.ningwy.smartbj.view.NoScrollViewPager
        android:id="@+id/vp_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8C8A8C"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/rb_tag_home"
            style="@style/radio_button_style"
            android:drawableTop="@drawable/home_tag_selector"
            android:text="主页" />

        <RadioButton
            android:id="@+id/rb_tag_news"
            style="@style/radio_button_style"
            android:drawableTop="@drawable/news_tag_selector"
            android:text="新闻" />

        <RadioButton
            android:id="@+id/rb_tag_smart_service"
            style="@style/radio_button_style"
            android:drawableTop="@drawable/smart_service_tag_selector"
            android:text="服务" />

        <RadioButton
            android:id="@+id/rb_tag_govaffairs"
            style="@style/radio_button_style"
            android:drawableTop="@drawable/govaffairs_tag_selector"
            android:text="政务" />

        <RadioButton
            android:id="@+id/rb_tag_setting"
            style="@style/radio_button_style"
            android:drawableTop="@drawable/setting_tag_selector"
            android:text="设置" />

    </RadioGroup>

</LinearLayout>